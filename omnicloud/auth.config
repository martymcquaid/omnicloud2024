# OmniCloud Configuration
# Copy to omnicloud.config and modify as needed

# Database connection
host=localhost
port=5432
database=OmniCloud
user=omni
password=Random93555342

# Server configuration
server_mode=client
# Options: "main" for main server, "client" for site servers
# Main server receives registrations and inventory from clients
# Client servers report to main server

# API port (default: 10858)
api_port=10858

# Registration key for site authentication
# Main server: this is the key that clients must provide
# Client server: this is the key to authenticate with main server
registration_key=612bb8063b3d6a2d9f0951cce6dd594a77a3a81ad87591c351839d7fc18d1e4a

# Main server URL (required for client mode)
main_server_url=http://dcp1.omniplex.services:10858

# DCP archive path
scan_path=/library/omnicloud/testlibrary

# Torrent data directory (downloads / torrent storage)
torrent_data_dir=/opt/OmniCloud/omnicloud2024/omnicloud/data/torrents

# Periodic scan interval in hours
scan_interval=12

# Server identification
server_name=lisburn
server_location=Local

# Torrent generation - Performance tuning for 128-core server
# max_torrent_generation_workers: how many DCPs to hash in parallel (20 = aggressive, fast)
# piece_hash_workers: hashing workers per torrent (auto = CPU count)
max_torrent_generation_workers=20
